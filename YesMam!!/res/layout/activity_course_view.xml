<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/reqAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="56dp"
        android:text="@string/reqAttendance"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desiredAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reqAttendance"
        android:layout_below="@+id/reqAttendance"
        android:layout_marginTop="23dp"
        android:text="@string/desiredAttendance"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
